{
    "variables": {
            "project_id": null,
            "source_image_family": "ubuntu-minimal-1604-lts",
            "image_family": "docker-host",
            "machine_type": "g1-small",
            "image_description": "Ubuntu 16.04 OTUS Docker Host",
            "disk_size": "10",
            "disk_type": "pd-standard",
            "network": "default",
            "tags": "docker"
    },
    "builders": [
        {
            "type": "googlecompute",
            "project_id": "{{user `project_id`}}",
            "image_name": "docker-host-{{timestamp}}",
            "image_family": "{{user `image_family`}}",
            "source_image_family": "{{user `source_image_family`}}",
            "zone": "europe-north1-c",
            "ssh_username": "appuser",
            "machine_type": "{{user `machine_type`}}",
            "disk_size": "{{user `disk_size`}}",
            "disk_type": "{{user `disk_type`}}",
            "network": "{{user `network`}}",
            "tags": "{{user `tags`}}"
        }
    ],
    "provisioners": [
        {
            "type": "ansible",
            "playbook_file": "ansible/playbooks/python.yml",
            "groups": "tag_docker-host"
        },
        {
            "type": "ansible",
            "playbook_file": "ansible/playbooks/docker.yml",
            "groups": "tag_docker-host"
        }
    ]
}
